<h1>Departamentos</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nome %></td>
        <td><%= button_to 'Abrir', departamento, class:"btn btn-primary" %></td>
        <td><%= button_to 'Editar', edit_departamento_path(departamento), class:"btn btn-secundary" %></td>
        <td><%= button_to 'Remover', departamento, method: :delete, class:"btn btn-danger", data: { confirm: 'VocÃª tem certeza que deseja remover?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

